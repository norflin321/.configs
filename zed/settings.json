{
	// vim
	"vim_mode": true,
	"vim": { "use_system_clipboard": "always" },

	// theme
	"theme": {
		"mode": "system",
		"light": "One Light",
		"dark": "tonku"
	},

	// font ui
	"ui_font_family": "JetBrains Mono",
	"ui_font_size": 13,

	// font
	"buffer_font_family": "JetBrains Mono",
	"buffer_font_size": 11,
	// "buffer_line_height": { "custom":  1.5 },
	"buffer_line_height": "comfortable",
	"buffer_font_features": { "calt": false },

	"tab_size": 4,
	"cursor_blink": false,
	"current_line_highlight": "none",
	"hard_tabs": true,
	"ensure_final_newline_on_save": false,
	"remove_trailing_whitespace_on_save": true,

	"unstable.ui_density": "compact",
	"toolbar": {
		"breadcrumbs": false,
		"quick_actions": false,
		"selections_menu": false,
		"agent_review": false
	},
	"gutter": {
		"line_numbers": true,
		"folds": false,
		"runnables": false,
		"breakpoints": false
	},

	"show_signature_help_after_edits": true,
	"inline_code_actions": false,

	"centered_layout": { "left_padding": 0.12, "right_padding": 0.12 },

	"debugger": { "button": false },
	"collaboration_panel": { "button": false },
	"scrollbar": { "axes": { "horizontal": false }, "cursors": false, "show": "always", "git_diff": false },
	"project_panel": {
		"auto_fold_dirs": false,
		"sticky_scroll": false,
		"scrollbar": { "show": "never" },
		"git_status": false,
		"indent_guides": { "show": "never" },
		"dock": "left"
	},
	"show_call_status_icon": false,

	"tab_bar": { "show_tab_bar_buttons": false },
	"tabs": {
		"file_icons": true,
		"activate_on_close": "left_neighbour",
		"show_close_button": "hover"
	},
	"outline_panel": { "button": false, "dock": "left" },
	"notification_panel": { "button": false },
	"git_panel": { "button": false },
	"terminal": {
		"font_family": "JetBrains Mono",
		"font_size": 11,
		"cursor_shape": "bar",
		"blinking": "off",
		"dock": "bottom",
		"line_height": "comfortable"
	},

	"session": { "restore_unsaved_buffers": false },

	"preview": {
		"restore_on_startup": "last_workspace",
		"ensure_final_newline_on_save": false
	},

	"git": {
		"inline_blame": { "enabled": false },
		"git_gutter": "hide"
	},

	"format_on_save": "off",
	"search": { "button": false },
	"show_edit_predictions": false,
	"agent": { "button": false },
	"drag_and_drop_selection": {"enabled": false },
	"title_bar": { "show_user_picture": false, "show_sign_in": false },

	"scroll_beyond_last_line": "off",
	"lsp_highlight_debounce": 0,
	"status_bar": { "active_language_button": false, "experimental.show": false },

	"minimap": { "show": "never", "current_line_highlight": "all" },
	"preview_tabs": { "enabled": true, "enable_preview_from_code_navigation": true, "enable_preview_from_file_finder": true },
	"excerpt_context_lines": 3,
	"vertical_scroll_margin": 5,
	"expand_excerpt_lines": 10,
	"minimum_contrast_for_highlights": 0,
	"show_whitespaces": "none",

	"lsp": {
		"vtsls": { "settings": { "typescript": { "preferences": { "importModuleSpecifier": "non-relative" } } } }
	}
}
