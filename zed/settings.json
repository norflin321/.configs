{
  "vim_mode": true,
  "vim": { "use_system_clipboard": "always" },

  "theme": "Catpuccin Custom",
  "experimental.theme_overrides": {

	  "syntax": {
			"attribute": { "font_style": "normal" },
			"boolean": { "font_style": "normal" },
			"comment": { "font_style": "normal" },
			"comment.doc": { "font_style": "normal" },
			"constant": { "font_style": "normal" },
			"constructor": { "font_style": "normal" },
			"embedded": { "font_style": "normal" },
			"emphasis": { "font_style": "normal" },
			"emphasis.strong": { "font_style": "normal" },
			"enum": { "font_style": "normal" },
			"function": { "font_style": "normal" },
			"hint": { "font_style": "normal" },
			"keyword": { "font_style": "normal" },
			"link_text": { "font_style": "normal" },
			"link_uri": { "font_style": "normal" },
			"number": { "font_style": "normal" },
			"operator": { "font_style": "normal" },
			"predictive": { "font_style": "normal" },
			"predoc": { "font_style": "normal" },
			"primary": { "font_style": "normal" },
			"property": { "font_style": "normal" },
			"punctuation": { "font_style": "normal" },
			"punctuation.bracket": { "font_style": "normal" },
			"punctuation.delimiter": { "font_style": "normal" },
			"punctuation.list_marker": { "font_style": "normal" },
			"punctuation.special": { "font_style": "normal" },
			"punctuation.special.symbol": { "font_style": "normal" },
			"string": { "font_style": "normal" },
			"string.escape": { "font_style": "normal" },
			"string.regex": { "font_style": "normal" },
			"string.special": { "font_style": "normal" },
			"string.special.symbol": { "font_style": "normal" },
			"tag": { "font_style": "normal" },
			"text.literal": { "font_style": "normal" },
			"title": { "font_style": "normal" },
			"type": { "font_style": "normal" },
			"type.interface": { "font_style": "normal" },
			"type.super": { "font_style": "normal" },
			"variable": { "font_style": "normal" },
			"variable.member": { "font_style": "normal" },
			"variable.parameter": { "font_style": "normal" },
			"variable.special": { "font_style": "normal" },
			"variant": { "font_style": "normal" }
		}
  },

  "buffer_font_family": "JetBrains Mono",
  "buffer_font_size": 11,
  "ui_font_family": "JetBrains Mono",
  "ui_font_size": 12,
  "buffer_line_height": { "custom": 1.50 },
  "buffer_font_features": { "calt": false },
  "edit_predictions": { "mode": "subtle" },

  "tab_size": 2,
  "cursor_blink": false,
  "current_line_highlight": "none",
  "show_whitespaces": "selection",
  "indent_guides": { "enabled": false },
  "hard_tabs": true,
  "search_wrap": true,
  "vertical_scroll_margin": 5,
  "scroll_beyond_last_line": "off",
  "inlay_hints": { "enabled": false },
  "show_completions_on_input": true,
  "auto_signature_help": false,
  "scroll_sensitivity": 1,
  "expand_excerpt_lines": 15,
  "soft_wrap": "none",
  "always_treat_brackets_as_autoclosed": true,

  "extend_comment_on_newline": true,
  "ensure_final_newline_on_save": false,
  "remove_trailing_whitespace_on_save": true,

  "unstable.ui_density": "compact",
  "toolbar": { "breadcrumbs": true, "quick_actions": false, "selections_menu": false },
  "gutter": { "line_numbers": false, "code_actions": false, "folds": false, "runnables": false, "breakpoints": false },
  "inline_code_actions": false,
  "debugger": { "button": false },
  "collaboration_panel": { "button": false, "dock": "bottom", "default_width": 240 },
  "chat_panel": { "button": "never", "dock": "bottom", "default_width": 240 },
  "tab_bar": { "show_nav_history_buttons": false, "show": true },
  "scrollbar": { "show": "always", "git_diff": true, "selections": true, "symbols_selections": true, "diagnostics": "all", "axes": { "horizontal": false } },
  "project_panel": {
    "default_width": 200,
    "dock": "left",
    "file_icons": true,
    "folder_icons": true,
    "git_status": true,
    "indent_size": 20,
    "auto_reveal_entries": true,
    "button": true,
    "auto_fold_dirs": false,
    "indent_guides": { "show": "never" },
    "scrollbar": { "show": "never" }
  },
  "show_call_status_icon": false,
  "tabs": { "git_status": true, "close_position": "right", "file_icons": true, "activate_on_close": "left_neighbour", "show_close_button": "hover" },
  "outline_panel": { "dock": "right", "git_status": false, "indent_size": 15, "indent_guides": { "show": "never" }, "button": false },
  "git_panel": { "button": false },

  "terminal": {
	  "font_family": "JetBrains Mono",
		"font_size": 11,
		"cursor_shape": "bar",
		"blinking": "off",
		"dock": "bottom"
  },
  "agent_font_size": 14,

  "session": { "restore_unsaved_buffers": false },
  "features": { "edit_prediction_provider": "zed", "copilot": false },
  "preview": {
	  "restore_on_startup": "last_workspace",
		"ensure_final_newline_on_save": false
  },
  "preview_tabs": {
	  "enabled": true,
		"enable_preview_from_file_finder": true,
		"enable_preview_from_code_navigation": true
  },

  "agent": {
	  "default_model": { "provider": "openrouter", "model": "deepseek/deepseek-chat-v3-0324:free" },
	  "always_allow_tool_actions": true,
	  "default_profile": "write",
	  "enabled": true,
	  "version": "2",
	  "button": true,
	  "dock": "left"
  },

  "language_models": {
		"ollama": {
			"api_url": "",
			"available_models": [
				{ "name": "local_test_1", "max_tokens": 100, "provider": "ollama", "display_name": "local_test_1" }
			]
		}
  },

  "notification_panel": { "dock": "left", "button": false },

  "git": {
 	 "inline_blame": { "enabled": false },
   "git_gutter": "tracked_files"
  },

  "format_on_save": "off",
  "lsp": {
    "clangd": {
	    "binary": { "args": ["--background-index", "--pch-storage=memory", "--log=verbose", "--index=.clangd/index"] }
    }
  },
  "languages": {
	  "Go": { "format_on_save": "off" },
	  // "Rust": { "tab_size": 4 },
		"Python": { "enable_language_server": false }
  },

	"ssh_connections": [
	  { "host": "88.212.207.7", "username": "kurtin", "port": 37, "projects": [ {"paths": ["~/mergicpets_server"]} ], "upload_binary_over_ssh": true }
	],

	"minimap": { "show": "never", "current_line_highlight": "all", "thumb_border": "full" },
	"search": { "button": false },

	"title_bar": { "show_user_picture": true, "show_sign_in": true }
}