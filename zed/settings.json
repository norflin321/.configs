{
  "vim_mode": true,
  "vim": { "use_system_clipboard": "always" },

  "theme": "Tomorrow Min Custom",
  "experimental.theme_overrides": {
	  // "players": [{ "cursor": "#ccc" }],
	  // "players": [{ "cursor": "#9499b8" }],
		// "terminal.background": "#15161e",
	  "syntax": {
			"attribute": { "font_style": "normal" },
			"boolean": { "font_style": "normal" },
			"comment": { "font_style": "normal" },
			"comment.doc": { "font_style": "normal" },
			"constant": { "font_style": "normal" },
			"constructor": { "font_style": "normal" },
			"embedded": { "font_style": "normal" },
			"emphasis": { "font_style": "normal" },
			"emphasis.strong": { "font_style": "normal" },
			"enum": { "font_style": "normal" },
			"function": { "font_style": "normal" },
			"hint": { "font_style": "normal" },
			"keyword": { "font_style": "normal" },
			"link_text": { "font_style": "normal" },
			"link_uri": { "font_style": "normal" },
			"number": { "font_style": "normal" },
			"operator": { "font_style": "normal" },
			"predictive": { "font_style": "normal" },
			"predoc": { "font_style": "normal" },
			"primary": { "font_style": "normal" },
			"property": { "font_style": "normal" },
			"punctuation": { "font_style": "normal" },
			"punctuation.bracket": { "font_style": "normal" },
			"punctuation.delimiter": { "font_style": "normal" },
			"punctuation.list_marker": { "font_style": "normal" },
			"punctuation.special": { "font_style": "normal" },
			"punctuation.special.symbol": { "font_style": "normal" },
			"string": { "font_style": "normal" },
			"string.escape": { "font_style": "normal" },
			"string.regex": { "font_style": "normal" },
			"string.special": { "font_style": "normal" },
			"string.special.symbol": { "font_style": "normal" },
			"tag": { "font_style": "normal" },
			"text.literal": { "font_style": "normal" },
			"title": { "font_style": "normal" },
			"type": { "font_style": "normal" },
			"type.interface": { "font_style": "normal" },
			"type.super": { "font_style": "normal" },
			"variable": { "font_style": "normal" },
			"variable.member": { "font_style": "normal" },
			"variable.parameter": { "font_style": "normal" },
			"variable.special": { "font_style": "normal" },
			"variant": { "font_style": "normal" }
		}
  },

  "buffer_font_family": "JetBrains Mono",
  "buffer_font_size": 12,
  "ui_font_family": "JetBrains Mono",
  "ui_font_size": 14,
  "ui_font_weight": 300,
  "buffer_line_height": { "custom": 1.70 },
  "buffer_font_features": { "calt": true },

  "tab_size": 2,
  "cursor_blink": false,
  "current_line_highlight": "line",
  "show_whitespaces": "selection",
  "indent_guides": { "enabled": false },
  "hard_tabs": true,
  "search_wrap": false,
  "vertical_scroll_margin": 5,
  "scroll_beyond_last_line": "off",
  "inlay_hints": { "enabled": false },
  "show_completions_on_input": false,
  "auto_signature_help": false,
  "scroll_sensitivity": 1,
  "expand_excerpt_lines": 15,
  "soft_wrap": "none",
  "always_treat_brackets_as_autoclosed": true,
  // "wrap_guides": [140],

  "extend_comment_on_newline": true,
  "ensure_final_newline_on_save": false,
  "remove_trailing_whitespace_on_save": true,

  "unstable.ui_density": "compact",
  "toolbar": { "breadcrumbs": true, "quick_actions": false, "selections_menu": false },
  "gutter": { "line_numbers": true, "code_actions": false, "folds": false, "runnables": false },
  "collaboration_panel": { "button": false, "dock": "left", "default_width": 240 },
  "chat_panel": { "button": false, "dock": "right", "default_width": 240 },
  "tab_bar": { "show_nav_history_buttons": false, "show": true },
  "scrollbar": { "show": "always", "git_diff": true, "selections": true, "symbols_selections": true, "diagnostics": true, "axes": { "horizontal": false } },
  "project_panel": {
    "default_width": 200,
    "dock": "left",
    "file_icons": true,
    "folder_icons": true,
    "git_status": true,
    "indent_size": 20,
    "auto_reveal_entries": true,
    "button": true,
    "auto_fold_dirs": false,
    "indent_guides": { "show": "never" }
  },
  "show_call_status_icon": false,
  "tabs": { "git_status": true, "close_position": "right", "file_icons": true, "activate_on_close": "history" },
  "outline_panel": { "dock": "left", "git_status": false, "indent_size": 15, "indent_guides": { "show": "never" } },

  "terminal": {
	  "font_family": "JetBrains Mono",
		"font_size": 12,
		"cursor_shape": "bar",
		"blinking": "off",
		"dock": "right"
  },

  "session": { "restore_unsaved_buffers": false },
  "features": { "inline_completion_provider": "none", "copilot": false },
  "preview": {
	  "restore_on_startup": "last_workspace",
		"ensure_final_newline_on_save": false
  },
  "preview_tabs": {
	  "enabled": true,
		"enable_preview_from_file_finder": true,
		"enable_preview_from_code_navigation": true
  },

  "assistant": {
	  "enabled": false,
    "default_model": { "provider": "zed.dev", "model": "claude-3-5-sonnet-latest" },
    "version": "2",
    "button": false,
    "dock": null
  },

  "git": {
 	 "inline_blame": { "enabled": false },
   "git_gutter": "tracked_files"
  },

  "format_on_save": "off",
  "lsp": {
    "clangd": {
      "binary": { "path": "/opt/homebrew/Cellar/llvm/19.1.1/bin/clangd", "args": [] }
    },
    "rust-analyzer": {
	    // remove after issue with updating rust-analyzer will be fixed
      "binary": { "ignore_system_version": true, "path": "/Users/norflin/.rustup/toolchains/beta-aarch64-apple-darwin/bin/rust-analyzer", "args": [] }
    }
  },
  "languages": {
	  "Go": { "format_on_save": "language_server" },
	  // "Rust": { "format_on_save": "language_server" },
		"Python": { "enable_language_server": false }
  },

	"ssh_connections": [
	  { "host": "88.212.207.7", "username": "kurtin", "port": 37, "projects": [ {"paths": ["~/mergicpets_server"]} ] }
	]
}